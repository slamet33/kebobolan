<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="net.slametriyadi.kebobolan">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_kebobolan"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".teams.detail.DetailTeamActivity"
                android:label="@string/title_activity_detail_team"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".match.detail.DetailMatchActivity"/>
        <activity
                android:name=".players.detail.DetailPlayerActivity"
                android:label="@string/title_activity_detail_player">
        </activity>
        <activity
                android:name=".match.search.SearchMatchActivity"
                android:label="@string/title_search_match_activity">
        </activity>
        <activity android:name=".teams.search.SearchTeamActivity"
                  android:label="@string/title_search_team_activity">
        </activity>
    </application>

</manifest>