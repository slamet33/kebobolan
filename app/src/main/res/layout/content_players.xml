<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

    <ImageView android:id="@+id/imgPlayer" android:layout_width="0dp" android:layout_height="100dp" android:layout_weight="2"
               tools:ignore="ContentDescription" android:scaleType="centerCrop"/>

    <TextView android:id="@+id/namePlayer" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3" android:gravity="center"/>

    <TextView android:id="@+id/positionPlayer" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2" android:gravity="center"/>

</LinearLayout>